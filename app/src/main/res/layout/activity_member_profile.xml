<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@drawable/pantalla1_textura_fondo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.16">

                <TextView
                    android:id="@+id/lblCabezera"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:text="Perfil de Usuario"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textSize="30dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView8"
                    style="@style/TextView_StaticValues_Profile"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/lblCabezera"
                    android:paddingLeft="5dp"
                    android:text="@string/name"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView9"
                    style="@style/TextView_StaticValues_Profile"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="59dp"
                    android:paddingLeft="5dp"
                    android:text="@string/membership_number"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView8"
                    android:background="#ffd1d1d1"
                    android:freezesText="true"
                    android:paddingRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    />


                <TextView
                    android:id="@+id/txt_membership_type"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/txt_maintenance_type"
                    android:layout_alignBottom="@+id/txt_maintenance_type"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:background="@color/white"
                    android:freezesText="true"
                    android:paddingRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:visibility="gone"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView11"
                            style="@style/TextView_StaticValues_Profile"
                            android:layout_alignBaseline="@+id/textView10"
                            android:layout_alignBottom="@+id/textView10"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:paddingLeft="5dp"
                            android:text="@string/membership_number"
                            android:textColor="@color/black"
                            android:textSize="17dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_membership_number"
                            android:layout_width="170dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignTop="@+id/textView9"
                            android:layout_toLeftOf="@+id/txt_maintenance_type"
                            android:layout_toStartOf="@+id/txt_maintenance_type"
                            android:background="#ffd1d1d1"
                            android:freezesText="true"
                            android:paddingRight="5dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                        <TextView
                            android:id="@+id/textView15"
                            style="@style/TextView_StaticValues_Profile"
                            android:paddingLeft="5dp"
                            android:text="@string/club_name"
                            android:textColor="@color/black"
                            android:textSize="17dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/txt_branch_name"
                            android:layout_width="170dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignTop="@+id/textView9"
                            android:layout_toLeftOf="@+id/txt_maintenance_type"
                            android:layout_toStartOf="@+id/txt_maintenance_type"
                            android:background="#ffd1d1d1"
                            android:freezesText="true"
                            android:paddingRight="5dp"
                            android:textColor="@color/black"
                            android:textSize="20sp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView12"
                            style="@style/TextView_StaticValues_Profile"
                            android:layout_above="@+id/txt_membership_number"
                            android:layout_alignLeft="@+id/txt_membership_number"
                            android:layout_alignStart="@+id/txt_membership_number"
                            android:paddingLeft="5dp"
                            android:text="@string/membership_type"
                            android:textColor="@color/black"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/txt_membership_type"
                            android:layout_width="170dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignTop="@+id/txt_branch_name"
                            android:layout_toEndOf="@+id/txt_membership_type"
                            android:layout_toRightOf="@+id/txt_membership_type"
                            android:background="#ffd1d1d1"
                            android:freezesText="true"
                            android:paddingRight="5dp"
                            android:textColor="@color/black"
                            android:textSize="20dp"
                            android:visibility="visible"/>

                        <TextView
                            android:id ="@+id/txt_text"
                            style="@style/TextView_StaticValues_Profile"
                            android:text="@string/Maintenance"
                            android:textColor="@color/black"
                            android:textSize="17dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@id/txt_maintenance_type"
                            android:layout_width="170dp"
                            android:layout_height="40dp"
                            android:background="#ffd1d1d1"
                            android:freezesText="true"
                            android:paddingRight="5dp"
                            android:textColor="@color/black"
                            android:textSize="20dp"/>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/textView10"
                    style="@style/TextView_StaticValues_Profile"
                    android:layout_above="@+id/textView9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:paddingLeft="5dp"
                    android:text="@string/membership_type"
                    android:textColor="@color/black"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txt_maintenance_type"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_alignBottom="@+id/txt_branch_name"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:background="#ffd1d1d1"
                    android:freezesText="true"
                    android:paddingRight="5dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="0.14">

                <include
                    android:id="@+id/lyt_physical_complexion"
                    layout="@layout/layout_physical_complexion"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"/>
            </LinearLayout>

            <com.facebook.widget.LoginButton
                android:id="@+id/btn_facebook_connect"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/com_facebook_loginbutton_blue"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_save_profile"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:background="#ff8a179b"
                android:text="@string/save_profile"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/btn_show_policies"
                style="?android:buttonStyleSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/selectable_background"
                android:text="@string/show_policies"
                android:textColor="@color/black"
                android:visibility="invisible"/>

        </LinearLayout>

    </ScrollView>
</FrameLayout>