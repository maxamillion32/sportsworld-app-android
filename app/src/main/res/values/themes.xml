<resources>

    <style name="Theme.Shared" parent="@style/Theme.Sherlock">
        <item name="homeAsUpIndicator">@drawable/ic_home_as_up</item>
        <item name="android:listViewStyle">@style/ListView.SportsWorld</item>
        <item name="android:expandableListViewStyle">@style/ExpandableListView.SportsWorld</item>
        <item name="android:listSelector">@drawable/selectable_background</item>
        <item name="android:scrollbarTrackVertical">@null</item>
        <item name="android:scrollbarThumbVertical">@color/scroll</item>
        <item name="android:scrollbarTrackHorizontal">@null</item>
        <item name="android:scrollbarThumbHorizontal">@color/scroll</item>
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:buttonStyle">@style/Button.SportsWorld</item>
        <item name="android:editTextStyle">@style/EditText.SportsWorld</item>
        <item name="android:windowBackground">@drawable/pantalla1_textura_fondo</item>
        <item name="android:checkboxStyle">@style/CheckBox.SportsWorld</item>
    </style>

    <style name="Theme.SportsWorld" parent="Theme.Shared">
        <item name="actionBarItemBackground">@drawable/selectable_background</item>
        <item name="popupMenuStyle">@style/PopupMenu.SportsWorld</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.SportsWorld</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.SportsWorld</item>
    </style>

    <style name="Theme.SportsWorld.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SportsWorld.SplashScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

</resources>